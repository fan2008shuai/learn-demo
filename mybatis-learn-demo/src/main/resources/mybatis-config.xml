<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties" >
        <property name="username" value="root"/>
        <property name="password" value=""/>
    </properties>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias alias="role" type="org.fan.learn.demo.quick.start.bean.Role"/>
        <typeAlias alias="user" type="org.fan.learn.demo.quick.start.bean.User"/>
        <!--  内部类使用$符号表示，而不是.符号      -->
        <typeAlias alias="sex" type="org.fan.learn.demo.quick.start.bean.User$Sex"/>
    </typeAliases>
    <typeHandlers>
        <typeHandler javaType="sex" jdbcType="VARCHAR"
                     handler="org.fan.learn.demo.quick.start.type.handler.UserEnumTypeHandler"/>
    </typeHandlers>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <!-- JdbcTransactionFactory 只有一个配置 skipSetAutoCommitOnClose 在生效 -->
                <!-- 下面的配置无效 -->
                <property name="autoCommit" value="true"/>
            </transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="role-mapper.xml"/>
        <mapper resource="user-mapper.xml"/>
    </mappers>
</configuration>